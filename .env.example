# Database Configuration
# Internal database URL (used by the application)
DATABASE_URL=postgres://myuser:mypassword@db:5432/mydatabase

# External database URL (used by Drizzle Studio and other external tools)
DATABASE_URL_EXTERNAL=postgres://myuser:mypassword@localhost:5432/mydatabase

# PostgreSQL Configuration (used by Docker Compose)
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=mydatabase

# Application Secrets
# Secret key for server-side use (not exposed to client)
SECRET_KEY=my-secret-key

# Public key for client-side use (exposed to browser)
# Note: NEXT_PUBLIC_ prefix makes this available to the browser
NEXT_PUBLIC_SAFE_KEY=safe-key

# HashiCorp Cloud Platform Configuration (Optional)
# These are used in instrumentation.ts to load secrets from HCP Vault
# If not set, the app will still work but won't load secrets from HCP
HCP_ORG=your-org-name
HCP_PROJECT=your-project-name
HCP_API_KEY=your-hcp-api-key

